{{ ansible_managed | comment }}

{% if antigen_theme not in (None, omit, {}) -%}
    {%- if antigen_theme.env is defined and antigen_theme.env not in (None, '', omit, {}) -%}
        {%- for key, value in antigen_theme.env.items() -%}
            {{ key }}={{ value }}{{ "\n" }}
        {%- endfor -%}
        {{ "\n" }}
    {%- endif -%}
    {% if 'url' not in antigen_theme -%}
        antigen theme {{ antigen_theme.name | quote }}
    {%- else -%}
        antigen theme {{ antigen_theme.url + ' ' + antigen_theme.name }}
    {%- endif %}
{%- endif %}
